@using Microsoft.AspNetCore.Components
@inject IUriHelper UriHelper

<nav class="navbar navbar-light bg-light justify-content-between">
    <NavLink href="#"> <img class="logo" src="/images/logo.svg" /></NavLink>
    <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" onclick="@NavigateToRecipeComponent">Search</button>
    </form>
</nav>

@code {
    private void NavigateToRecipeComponent()
    {
        UriHelper.NavigateTo("recipe/1234");
    }
}